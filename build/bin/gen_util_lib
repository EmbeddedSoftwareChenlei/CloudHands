#!/bin/bash

if [ $# -lt 2 ]; then
	echo "usage:<make.include path> <util src path>"
fi

mki=$1
src=$2

mkdir -p /tmp/util_src/

cp -r $src/* /tmp/util_src/
cp $mki /tmp

mv /tmp/util_src/MakefileNDPDK /tmp/util_src/Makefile

make -C /tmp/util_src/

cp /tmp/util_src/libutil.a .

rm -rf /tmp/util_src



